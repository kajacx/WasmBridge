package component-test:wit-protocol;

interface companies {
  resource company {
    constructor(name: string, max-salary: u32);
    get-name: func() -> string;
    get-max-salary: func() -> u32;
  }

  company-roundtrip: func(company: company) -> company;
}

interface employees {
  use companies.{company};
  resource employee {
    constructor(name: string, min-salary: u32);
    get-name: func() -> string;
    get-min-salary: func() -> u32;
  }

  find-job: func(employee: employee, companies: list<company>) -> option<company>;

  company-roundtrip: func(company: company) -> company;
}

world resources {
  import companies;
  export employees;
}
